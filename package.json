{
  "name": "@metarhia/sql",
  "version": "0.1.0",
  "description": "Metarhia SQL utilities",
  "main": "sql.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "lint": "eslint . && remark . && prettier --check \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/.*rc\" \"**/*.yml\"",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/.*rc\" \"**/*.yml\"",
    "test": "npm run -s lint && metatests test/",
    "doc": "metadoc -c .metadocrc && npm run fmt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metarhia/sql.git"
  },
  "keywords": [
    "SQL",
    "Metarhia"
  ],
  "author": "Denys Otrishko <shishugi@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metarhia/sql/issues"
  },
  "homepage": "https://github.com/metarhia/sql#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@metarhia/doc": "^0.5.6",
    "eslint": "^6.4.0",
    "eslint-config-metarhia": "^7.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "metatests": "^0.7.1",
    "prettier": "^1.18.2",
    "remark-cli": "^7.0.0",
    "remark-preset-lint-metarhia": "^2.0.0",
    "remark-validate-links": "^9.0.1"
  },
  "dependencies": {
    "@metarhia/common": "^2.1.0"
  }
}
